<%- include('../../layout/header.ejs') %>
<%- include('../../layout/nav.ejs') %>  
<div id="layoutSidenav">
    <%- include('../../layout/sideBar.ejs') %>
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4">Manage Checkpoints</h1>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active">Manage Checkpoints</li>
                </ol>
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="card-header text-right">
                            <a href="add-checkpoint" class="btn btn-primary">Add Checkpoint</a>
                        </div>
                        <div class="card-body">
                            <table id="datatablesSimple">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Checkpoint No</th>
                                        <th>Checkpoint</th>
                                        <th>City</th>
                                        <th>Location</th>
                                        <th>Action</th>
                                        
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% for (var i = 0; i < checkPoints.length; i++) { %>
                                        <tr>
                                            <td><%= i + 1 %></td>
                                            <td><%= checkPoints[i].checkpoint_no %></td>
                                            <td><%= checkPoints[i].checkpoint %></td>
                                            <td><%= checkPoints[i].city %></td>
                                            <td><%= checkPoints[i].location %></td>
                                            <td>
                                                <a href="edit-checkpoint?id=<%= checkPoints[i].id %>" class="btn btn-primary">Edit</a>
                                                <a href="delete-checkpoint?id=<%= checkPoints[i].id %>"  onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger">Delete</a>

                                            </td>
                                        </tr>
                                      <% } %>  
                                    
                                   

                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
               </div>
        </main>
    </div>
</div>
<%- include('../../layout/footer.ejs') %>
